{
    "name": "ascetic-soft/backend-demo",
    "description": "DDD E-commerce Demo with CQRS (Waypoint + Rowcast + Wirebox)",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.4",
        "ascetic-soft/waypoint": "^1.1",
        "ascetic-soft/rowcast": "^1.0",
        "ascetic-soft/wirebox": "^1.0",
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.94"
    },
    "autoload": {
        "psr-4": {
            "Core\\": "core/",
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
